# 默认服务器 - 处理未授权域名访问
server {
    listen 80 default_server;
    listen 8443 ssl default_server;  # 你的HTTPS端口
    server_name _;
    
    # SSL 证书（可以使用自签名证书）
    ssl_certificate     /usr/local/etc/nginx/ssl/default/default.pem;
    ssl_certificate_key /usr/local/etc/nginx/ssl/default/default.key;
    
    # 直接返回 444 状态码（关闭连接）
    return 444;
}